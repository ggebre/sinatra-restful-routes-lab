<form action="/recipes/<%= @recipe.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h1>Edit Recipe <%= @recipe.name %> </h1>
    <p> Recipe Name:  <input type="text" name="name" placeholder="<%= @recipe.name %>"/> </p>
    <p> Recipe ingredients: <input type="text" name="ingredients" placeholder="<%= @recipe.ingredients %>"/> </p>
    <p> Recipe cook time: <input type="text" name="cook_time" placeholder="<%= @recipe.cook_time %>"/> </p>
    <button type="submit">Edit </button>
</form> 